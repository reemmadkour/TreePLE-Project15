<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cut"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context="ca.mcgill.ecse321.treeple.Options">>>

    <Button
        android:id="@+id/button4"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:background="#30000000"
        android:text="Choose One:"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="30sp" />

    <Button
        android:id="@+id/planttree_b"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cuttree_b"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp"
        android:text="Plant Tree"
        android:background="#30000000"/>

    <Button
        android:id="@+id/cuttree_b"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/planttree_b"
        android:layout_centerVertical="true"
        android:text="Cut Tree"
        android:background="#30000000"/>

    <Button
        android:id="@+id/viewmaps_b"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cuttree_b"
        android:layout_below="@+id/planttree_b"
        android:layout_marginTop="48dp"
        android:background="#30000000"
        android:text="View Map" />

</RelativeLayout>