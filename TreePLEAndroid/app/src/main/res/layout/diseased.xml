<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:id="@+id/ok_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/lat_dis"
        android:layout_marginEnd="82dp"
        android:layout_marginTop="54dp"
        android:background="#30000000"
        android:text="@android:string/ok" />

    <EditText
        android:id="@+id/lat_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lgt_d"
        android:layout_below="@+id/lgt_d"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:hint="Latitude"
        android:inputType="numberSigned|numberDecimal"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/lgt_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_diseased"
        android:layout_marginStart="35dp"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="Longitude"
        android:inputType="numberSigned|numberDecimal"
        android:textStyle="italic" />

    <Button
        android:id="@+id/title_diseased"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        android:background="#30000000"
        android:backgroundTint="@android:color/transparent"
        android:text="Mark as Diseased"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_diseased"
        android:layout_centerHorizontal="true"
        android:text="Thank you!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible" />
</RelativeLayout>