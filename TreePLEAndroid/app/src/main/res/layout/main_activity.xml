<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/tree3"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"

    tools:context="ca.mcgill.ecse321.treeple.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="94dp"
            android:text="Plant a Tree"
            android:textAlignment="viewStart"
            android:textColor="@color/common_google_signin_btn_text_light_focused"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#5fcc2e" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <EditText
                android:id="@+id/diametertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:ems="10"
                android:hint="Diameter"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:textStyle="italic" />


            </LinearLayout>

            <!-- TODO add height text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/heighttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/diametertext"
                    android:layout_marginTop="13dp"
                    android:ems="10"
                    android:hint="Height"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/longtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/diametertext"
                    android:layout_marginTop="13dp"
                    android:ems="10"
                    android:hint="Longitude"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/lattext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/diametertext"
                    android:layout_marginTop="13dp"
                    android:ems="10"
                    android:hint="Latitude"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textStyle="italic" />

            </LinearLayout>


            <!-- TODO add a Municipality Spinner -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/munspinner_label"
                    android:textStyle="italic" />

                <Spinner
                    android:id="@+id/munspinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:visibility="visible" />
            </LinearLayout>

            <!-- TODO add a Species Spinner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/speciesspinner"
                    android:textStyle="italic" />

                <Spinner
                    android:id="@+id/speciesspinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:visibility="visible" />
            </LinearLayout>

            <!-- TODO add a Land Type Spinner -->

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/landspinner"
                    android:textStyle="italic" />

                <Spinner
                    android:id="@+id/landspinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:visibility="visible" />
            </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!-- TODO add a View Maps Button here -->


            <ImageButton
                android:id="@+id/AddTree"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/tree3"
                android:contentDescription="Plant a Tree"
                android:cropToPadding="true"
                android:onClick="addTree"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/button" />

        </LinearLayout>


            <Button
            android:id="@+id/button1"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="top|right"
            android:layout_weight="1"

            android:fontFamily="sans-serif-condensed"
            android:lineSpacingExtra="8sp"
            android:text="View Maps"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="normal" />




    </LinearLayout>


</RelativeLayout>
